{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2015",
    "module": "ES2015",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
